<% include ../partials/header %>

<div class="container top-offset">
    <div class="row">
        <div class="col p-0">
            <div class="card m-3">
                <div class="card-body">
                    <h5 class="card-title">Edit <%=campgroundToEdit.name%></h5>
                    <form action="/campgrounds/<%=campgroundToEdit._id%>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="editedCampground[name]" value="<%=campgroundToEdit.name%>">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="editedCampground[image]" value="<%=campgroundToEdit.image%>">
                        </div>
                        <div class="form-group">
                            <textarea rows="5" cols="1" class="form-control" name="editedCampground[description]"><%=campgroundToEdit.description%></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a class="btn btn-primary" href="/campgrounds/<%=campgroundToEdit._id%>">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>