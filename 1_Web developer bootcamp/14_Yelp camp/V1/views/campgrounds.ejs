<% include partials/header %>


<h1>Campgrounds</h1>
<a href="/campgrounds/new">New campgrounds</a>

<div class="container">
    <div class="row">
        <% for (let i = 0; i < campgrounds.length; i++) { %>
        <div class="col-sm-6 col-lg-4 p-0">
            <div class="card m-3">
              <img class="card-img-top" src= "<%= campgrounds[i]["img"] %>" alt="Card image cap">
              <div class="card-body">
                <p class="card-text"><%=campgrounds[i]["name"] %></p>
              </div>
            </div>
        </div>
        <% } %>
    </div>
</div>



<% include partials/footer %>