<% include partials/header %>


<div class="ui container top-offset">
    <div class="ui grid centered">
        <div class="ten wide column">
            <form class="ui form" action="/posts/<%=postById["_id"]%>?_method=PUT" method="POST">
                <div class="field">
                    <label>Image URL</label>
                    <input type="text" name="blogPost[image]" value="<%= postById["image"] %>">
                </div>
                <div class="field">
                    <label>Post title</label>
                    <input type="text" name="blogPost[title]" value="<%=postById["author"] %>">
                </div>
                <div class="field">
                <label>Description</label>
                <textarea type="text" name="blogPost[body]"><%=postById["body"] %></textarea>
                </div>
                <button class="ui button" type="submit">Update</button>
            </form>
        </div>
    </div>
</div>


<% include partials/footer %>

